<div style="background: #eeeeee;">
    <div class="container-fluid user-order pb-5" style="padding-top: 30px;">
        <div class="row px-xl-5">
            <div class="projects">
                <div class="card">
                    <div class="card-header">
                        <h3 style="font-size: 19px; font-weight: bold;">Orders List</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <% if (productList <=0) { %>
                                <h3>No Orders</h3>
                            
                            <% } else { %>
                                <table width="100%" id="order_table">
                                    <thead style="text-align: center;">
                                        <tr>
                                            <td>Order ID</td>
                                            <td>Order Date</td>
                                            <td>Payment Type</td>
                                            <td>Order Status</td>
                                            <td>Expected Delivery</td>
                                            <td>Amount</td>
                                            <td>View</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (values of productList) { %>
                                            <tr>
                                                <td>
                                                    <%= values._id %>
                                                </td>
                                                <td>
                                                    <% let date = values.date %>
                                                                <% date = date.toLocaleString(); %> 
                                                                <%= date %>
                                                </td>
                                                <td>
                                                    <%= values.paymentMethod %>
                                                </td>
                                                <% if (values.status=="ordered" ) { %>
                                                    <td>
                                                        <span class="status pink"></span>
                                                        <%= values.status %>
                                                    </td>
                                                    <% } else if(values.status=="packed" ) { %>
                                                        <td>
                                                            <span class="status orange"></span>
                                                            <%= values.status %>
                                                        </td>
                                                        <% }else if(values.status == "shipped") { %>
                                                            <td>
                                                                <span class="status blue"></span>
                                                                <%= values.status %>
                                                            </td>
                                                            <% } else if(values.status == "delivered") { %>
                                                                <td>
                                                                    <span class="status green"></span>
                                                                    <%= values.status %>
                                                                </td>
                                                                <% } else if(values.status=="cancelled") { %>
                                                                    <td>
                                                                        <span class="status red"></span>
                                                                        <%= values.status %>
                                                                    </td>
                                                                    <% } else if(values.status == "placed") { %>
                                                                        <td>
                                                                            <span class="status yellow"></span>
                                                                            <%= values.status %>
                                                                        </td>
                                                                        <% } %>
                                                            <td>
                                                                <% let expectedDate = values.expected_Date %>
                                                                <% expectedDate = expectedDate.toLocaleString(); %> 
                                                                <%= expectedDate %>
                                                            </td>
                                                            <td>
                                                                <%= values.totalAmount %>
                                                            </td>
                                                            <td>
                                                                <!-- <button
                                                                    onclick="orderDetailView('<%=values._id %>','<%= values.product[0].product_Name %>')"
                                                                    class="btn btn-warning">View Detail
                                                                </button> -->
                                                                <button type="button" class="btn btn-warning"
                                                                    data-bs-toggle="modal" data-bs-target="#addCategory"
                                                                    onclick="view('<%=values._id%>')">View Detail
                                                                </button>
                                                            </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal for Product Details -->
<div class="modal fade" id="addCategory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Order Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive" id="table_main">
            </div>
            <div class="modal-footer">
                <button type="submit" onclick="orderCancel( '<%= values._id %>')" class="btn btn-primary">CANCEL ORDER</button>
            </div>
        </div>
    </div>
</div>
</div>

<script>
    function view(orderID) {
        const tableMain = document.getElementById('table_main')
        fetch('/orders/viewOrderDetails', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ orderID })
        }).then(res => res.json()).then(data => {
            let datas = data.orderProductDetails
            console.log(datas);
            console.log("d",datas[0].product.productDetails.product_Name);
            let table =
                `<table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Product Name</th>
                        <th>Product price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>`
            for( var i=0;i<datas.length;i++){
                    table +=
                        `<tr>
                            <td>
                                <div class="mb-3" style="background-image:url('${datas[i].product.productDetails.file_url}'); width:50px;height:50px; background-size:contain;background-repeat:no-repeat"></div>
                            </td>
                            <td>${datas[i].product.productDetails.product_Name}</td>
                            <td>${datas[i].product.productDetails.selling_Price}</td>
                            <td>${datas[i].product.productDetails.quantity}</td>
                        </tr>`                    
                }
            table +=
                `</tbody>
            </table>`
            tableMain.innerHTML = table
        })
    }

    $(document).ready(function () {
    $('#order_table').DataTable();
});


// Order Cancel
function orderCancel(orderID){
    fetch('/orders/cancel', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ orderID })
        }).then(res => res.json()).then(data => {
            window.location ='/orders'
        })
}

</script>
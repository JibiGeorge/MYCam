<div style="background: #eeeeee;">
    <div class="container-fluid pb-5" style="padding-top: 30px;">
        <div class="row px-xl-5">
            <div class="col-lg-7 mb-3" style="display: block;  overflow-x: auto;">
                <!-- For select Address -->
                <div class="col-lg-12 mb-4">
                    <h5 class="mb-3 text-uppercase" style="line-height: 1.2;">For Billing Address</h5>
                    <div class="p-4" style="width: 100%; background: #fff;">
                        <span>Selected Address Here</span>
                    </div>
                </div>
                <!-- Selected Address End -->

                <!-- Address Listing -->
                <div class="col-lg-12 mb-4">
                    <a href="/addressPage" class="btn btn-success mb-2">Add new Address</a>
                    <div class="p-4" style="width: 100%; background: #fff;">
                        <% for (var i=0;i<addressList.address.length;i++) { %>
                        <div class="mb-2 d-flex">
                            <div>
                                <input type="radio" class="form-check-input me-2" name="address">
                            </div>
                            <div>
                                <p class="m-0" style="font-weight: bold;"><%= addressList.address[i].name %></p>
                                <p style="font-size: 14px;"><%= addressList.address[i].address %> <span style="font-weight: bold;"><%= addressList.address[i].pin_Code %></span></p>
                            </div>
                        </div>
                        <% } %>                        
                    </div>
                </div>
            </div>

            <!-- Address Listing end -->

            <!-- For Order Details -->
            <div class="col-lg-5 mb-3" style="display: block;  overflow-x: auto;">
                <div class="col-lg-12 mb-4">
                    <h5 class="mb-3 text-uppercase" style="line-height: 1.2;">Order Details</h5>
                    <div class="p-4" style="width: 100%; background: #fff;">
                        <div style="border-bottom: 1px solid #bdc2c7;" class="mb-3">
                            <label for="" style="font-weight: bold; text-decoration: underline;"
                                class="mb-2">Products</label>
                            <div class="d-flex justify-content-between mb-1">
                                <h6 style="max-width: 15rem; overflow: hidden;">Product Name</h6>
                                <h6>₹98</h6>
                            </div>
                            <div class="d-flex justify-content-between mb-1">
                                <h6 style="max-width: 15rem; overflow: hidden;">Product Name</h6>
                                <h6>₹98</h6>
                            </div>
                            <div class="d-flex justify-content-between mb-1">
                                <h6 style="max-width: 15rem; overflow: hidden;">Product Name</h6>
                                <h6>₹98</h6>
                            </div>
                        </div>
                        <div style="border-bottom: 1px solid #bdc2c7;" class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <h6 style="max-width: 15rem; overflow: hidden;">Sub Total</h6>
                                <h6>₹98</h6>
                            </div>
                            <div class="d-flex justify-content-between mb-1">
                                <h6 style="max-width: 15rem; overflow: hidden;">Shipping</h6>
                                <h6>₹98</h6>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <label for="" style="font-weight: bold;" class="mb-2">Total Amount</label>
                                <h6>₹98</h6>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Payment Methods -->
                <div class="col-lg-12">
                    <h5 class="mb-3 text-uppercase" style="line-height: 1.2;">Payment Methods</h5>
                    <div class="p-4" style="width: 100%; background: #fff;">
                        <div class="mb-2">
                            <input type="radio" class="form-check-input me-2" name="paymentMethod">PayTM
                        </div>
                        <div class="mb-2">
                            <input type="radio" class="form-check-input me-2" name="paymentMethod">UPI
                        </div>
                        <div class="mb-2">
                            <input type="radio" class="form-check-input me-2" name="paymentMethod">Online Bank
                        </div>
                        <div class="mb-2">
                            <input type="radio" class="form-check-input me-2" name="paymentMethod">COD
                        </div>
                    </div>
                </div>
            </div>
            <!-- Order Details End -->


        </div>
    </div>
</div>
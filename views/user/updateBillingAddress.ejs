<div style="background: #eeeeee;">
    <div class="container-fluid pb-5" style="padding-top: 30px;">
        <div class="row px-xl-5">
            <div class="col-lg-7 mb-3" style="display: block;  overflow-x: auto;">
                <!-- For Billing Address -->
                <div class="col-lg-12 mb-4">
                    <h5 class="mb-3 text-uppercase" style="line-height: 1.2;">Update Billing Address</h5>
                    <div class="p-4" style="width: 100%; background: #fff;">
                        <form action="/userProfile/address/update?_method=PUT" method="post" style="text-align: left;" id="">
                            <input type="text" value="<%= address._id %>" name="addressID" style="display: none;">
                            <input type="text" value="<%= addressID %>" name="addressDocID" style="display: none;">
                            <div class="mb-3 d-flex">
                                <div style="width: 50%;" class="me-1">
                                    <label for="" class="form-label">Name</label>
                                    <input type="text" class="form-control" name="name" value="<%= address.name %>">
                                </div>
                                <div style="width: 50%;" class="me-1">
                                    <label for="" class="form-label">Mobile No</label>
                                    <input type="number" class="form-control" name="mobile_No" value="<%= address.mobile_No %>">
                                </div>
                            </div>
                            <div class="mb-3 d-flex">
                                <div style="width: 50%;" class="ms-1">
                                    <label for="" class="form-label">Zip Code/Pin Code</label>
                                    <input type="text" class="form-control" name="pin_Code" value="<%= address.pin_Code %>">
                                </div>
                                <div style="width: 50%;" class="ms-1">
                                    <label for="" class="form-label">Locality</label>
                                    <input type="text" class="form-control" name="locality" value="<%= address.locality %>">
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="me-1">
                                    <label for="" class="form-label">Address</label>
                                    <textarea type="text" class="form-control" name="address" style="height: 100px;"><%= address.address %></textarea>
                                </div>
                            </div>
                            <div class="mb-3 d-flex">
                                <div style="width: 50%;" class="me-1">
                                    <label for="" class="form-label">City</label>
                                    <input type="text" class="form-control" name="city" value="<%= address.city %>">
                                </div>
                                <div style="width: 50%;" class="ms-1">
                                    <label for="" class="form-label">State</label>
                                    <input type="text" class="form-control" name="state" value="<%= address.state %>">
                                </div>
                            </div>
                            <div class="mb-3 d-flex">
                                <div style="width: 50%;" class="me-1">
                                    <label for="" class="form-label">Land Mark</label>
                                    <input type="text" class="form-control" name="land_Mark" value="<%= address.land_Mark %>">
                                </div>
                                <div style="width: 50%;" class="me-1">
                                    <label for="" class="form-label">Alternative Phone</label>
                                    <input type="text" class="form-control" name="alter_Mobile" value="<%= address.alter_Mobile %>">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-warning">UPDATE</button>
                        </form>
                    </div>
                </div>
                <!-- Bill Address add form end  -->
            </div>
        </div>
    </div>
</div>
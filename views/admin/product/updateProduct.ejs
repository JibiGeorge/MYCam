<main class="main-content">
    <div class="product-grid">
        <div class="card">
            <div class="header">
                <h3>Update Product</h3>
            </div>
            <div class="card-body">
                <div>
                    <form action="/admin/productUpdate/updateData" method="post" class="productForm" enctype="multipart/form-data">
                        <input style="display: none;" type="text" id="categoryID" name="productID" value="<%= productData[0]._id %>">
                        <div class="mb-3">
                            <label for="" class="form-label">Product Name</label>
                            <span style="color: rgb(255, 0, 0); margin-left: 4px;" id="errorProductName"></span>
                            <input type="text" class="form-control" placeholder="Product Name" id="productName" name="product_Name" value="<%= productData[0].product_Name%>">
                        </div>
                        <div class="mb-3 d-flex" style="justify-content: space-between;">
                            <div style="width: 50%; margin-right: 5px;">
                                <label for="" class="form-label">Category Name</label>
                                <span style="color: rgb(255, 0, 0); margin-left: 4px;" id="errorCategory"></span>
                                <select class="form-select" name="category_Name" id="category">
                                    <option selected value="<%= productData[0].category[0]._id %>"><%= productData[0].category[0].categoryName %></option>
                                    <% for (var i=0; i<category.length; i++) { %>
                                        <option value="<%= category[i]._id %>"><%= category[i].categoryName %></option>
                                        <% } %>
                                </select>
                            </div>
                            <div style="width: 50%; margin-left: 5px;">
                                <label for="" class="form-label">Brand</label>
                                <span style="color: rgb(255, 0, 0); margin-left: 4px;" id="errorbrand"></span>
                                <select class="form-select" name="brand" id="brand">
                                    <option selected value="<%= productData[0].brandItem[0]._id %>"><%= productData[0].brandItem[0].brandName %></option>
                                    <% for (var i=0; i<brand.length; i++) { %>
                                        <option value="<%= brand[i]._id %>"><%= brand[i].brandName %></option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 d-flex" style="justify-content: space-between;">
                            <div style="width: 50%; margin-right: 5px;">
                                <label for="" class="form-label">Actual Price</label>
                                <span style="color: rgb(255, 0, 0); margin-left: 4px;" id="errorActualPrice"></span>
                                <input type="number" value="<%= productData[0].actual_Price %>" class="form-control" placeholder="Actual Price" name="actual_Price" id="actualPrice">
                            </div>
                            <div style="width: 50%; margin-left: 5px;">
                                <label for="" class="form-label">Selling Price</label>
                                <span style="color: rgb(255, 0, 0); margin-left: 4px;" id="errorSellingPrice"></span>
                                <input type="number" value="<%= productData[0].selling_Price %>" class="form-control" placeholder="Selling Price" name="selling_Price" id="sellingPrice">
                            </div>
                        </div>
                        <div class="mb-3 d-flex" style="justify-content: space-between;">
                            <div style="width: 50%; margin-right: 5px;">
                                <label for="" class="form-label">Stock in Hand</label>
                                <span style="color: rgb(255, 0, 0); margin-left: 4px;" id="errorstock"></span>
                                <input type="number" class="form-control" placeholder="Stock in Hand"
                                    name="stock_In_Hand" id="stock" value="<%= productData[0].stock_In_Hand %>">
                            </div>
                            <div style="width: 50%; margin-left: 5px;">
                                <label for="" class="form-label">Featured or Recent</label>
                                <div class="ms-4">
                                    <input class="form-check-input" type="radio" name="feature_or_recent"
                                        id="flexRadioDefault1" value="Featured Products">
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Featured Products
                                    </label>
                                    <input class="form-check-input" type="radio" name="feature_or_recent"
                                        id="flexRadioDefault1" value="Recent Products">
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Recent Products
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Description</label>
                            <span style="color: rgb(255, 0, 0); margin-left: 4px;" id="errorDescription"></span>
                            <textarea class="form-control" style="height: 100px;" name="description" id="description"><%= productData[0].description %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Specifications</label>
                            <span style="color: rgb(255, 0, 0); margin-left: 4px;" id="errorSpecifiaction"></span>
                            <textarea class="form-control" style="height: 100px;" name="specification" id="specifiaction"><%= productData[0].specification %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Image</label>
                            <img width="50px" height="50px" src="<%=productData[0].file_url %>" alt="Somthing Wrong">
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Image</label>
                            <span style="color: rgb(255, 0, 0); margin-left: 4px;" id=""></span>
                            <input type="file" name="productImage" class="form-control" >
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success">UPDATE</button>
                            <button class="btn btn-warning">RESET</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    .productForm {
        text-align: left;
    }
</style>